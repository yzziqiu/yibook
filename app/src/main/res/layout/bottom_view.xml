<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/head_height"
    >

    <RelativeLayout
        android:id="@+id/bvrelative_head_left"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingStart="16dp">

        <ImageView
            android:id="@+id/bvimg_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:src="@drawable/head_book_left" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="公益书"
                android:gravity="center"
                android:id="@+id/bvtv_free"
                android:textColor="@color/white"
                android:background="@drawable/button_head_strick"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="交易书"
                android:gravity="center"
                android:id="@+id/bvtv_buy"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/button_head_up"/>
        </LinearLayout>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/bv_relative_head_right"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingEnd="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/bv_head_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"

            android:textColor="@color/black"
            android:textSize="@dimen/text_size_base_16" />

        <ImageView
            android:id="@+id/bv_img_head_right"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="0dp"
            android:src="@mipmap/head_right" />
    </RelativeLayout>

    <View
        android:id="@+id/bvview_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/line_color" />


</RelativeLayout>