<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="left">

    <LinearLayout
        android:id="@+id/ll_left_personal_info"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/selector_menu_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_item_margin">

        <ImageView
            android:id="@+id/img_left_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/personal" />

        <TextView
            android:id="@+id/tv_left_login"
            android:layout_width="80dp"
            android:layout_height="27dp"
            android:layout_marginLeft="@dimen/left_item_margin"
            android:background="@drawable/buttom_white"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="注销"
            android:textColor="@color/left_menu_txt_personal_color"
            android:textSize="@dimen/text_size_base_12" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_left_personal_my"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_item_height"
        android:background="@drawable/selector_menu_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_item_margin"
        android:paddingRight="@dimen/left_item_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_menu_my" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_item_margin"
            android:layout_weight="1"
            android:text="我的"
            android:textColor="@color/left_menu_txt_color"
            android:textSize="@dimen/text_size_base_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/rl_left_personal_like"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_item_height"
        android:background="@drawable/selector_menu_item"
        android:paddingRight="@dimen/left_item_margin">

        <LinearLayout
            android:id="@+id/ll_left_notice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/left_item_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/personal_menu_like" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_item_margin"
                android:layout_weight="1"
                android:text="收藏"
                android:textColor="@color/left_menu_txt_color"
                android:textSize="@dimen/text_size_base_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_left_notice_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/head_notice"
            android:visibility="gone" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color" />

    <LinearLayout
        android:id="@+id/ll_left_personal_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/left_item_height"
        android:background="@drawable/selector_menu_item"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_item_margin"
        android:paddingRight="@dimen/left_item_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/personal_menu_setting" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_item_margin"
            android:layout_weight="1"
            android:text="设置"
            android:textColor="@color/left_menu_txt_color"
            android:textSize="@dimen/text_size_base_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line_color" />

</LinearLayout>