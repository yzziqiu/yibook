<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.got3.yibook.WantfreebookActivity">

    <com.got3.yibook.HeadView
        android:id="@+id/head_wfb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </com.got3.yibook.HeadView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/wfbiv1"
        />

    <LinearLayout
        android:layout_width="@dimen/widget_width"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="姓名"
            android:id="@+id/wfbtv_name"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:id="@+id/wfbet_neme"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/widget_width"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="手机"
            android:id="@+id/wfbtv_phone"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/wfbet_phone"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/widget_width"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="1">

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/wfbb_submit"
            android:text="提交"
            android:gravity="center"
            android:background="@drawable/ok_botton"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:id="@+id/wfbb_can"
            android:gravity="center"
            android:background="@drawable/ok_botton"/>

    </LinearLayout>

</LinearLayout>
